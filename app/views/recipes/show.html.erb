<div class='col-md-6'>
  <table class="table">
    <tr>
      <% @recipe.pictures.each do |pic| %>
      <td>
        <%= pic.picture %>
      </td>
      <%end %>
    </tr>
  </table>
</div>
<div class='col-md-6'>
  <table class="table">
    <tr>
      <td>
        <%= @recipe.name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @recipe.description %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @recipe.howto %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @recipe.difficulty %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @recipe.tools %>
      </td>
    </tr>
  </table>
</div>
