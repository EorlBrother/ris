<%= form_tag("/recipes", method: "create") do %>
  
  <div class="field">
    <%= label_tag(:name, "Name:") %>
  </div>

  <div class="field">
    <%= text_field_tag(:name) %>
  </div>

  <div class="field">
    <%= label_tag(:description, "Beschreibung:") %>
  </div>

  <div class="field">
    <%= text_area_tag(:description) %>
  </div>
    
  <div class="field">
    <%= label_tag(:howto, "Zubereitung:") %>
  </div>

  <div class="field">
    <%= text_area_tag(:howto) %>
  </div>

  <div class="field">
    <%= label_tag(:difficulty, "Schwierigkeitsgrad:") %>
  </div>

  <div class="field">
    <%= number_field(:difficulty, nil, in: 1.0..5.0, step: 1) %>
  </div>

  <div class="field">
    <%= label_tag(:tools, "GerÃ¤te:") %>
  </div>
    
  <div class="field">
    <%= text_area_tag(:tools) %>
  </div>
    
  <div class="field">
    <%= label_tag(:tools, "Zutaten:") %>
  </div>

  <div class="field">
    <% inf = 1.0 / 0.0 %>
    <%= number_field(:amount, nil, in: 0.0..inf, step: 0.1)%>
    <%= select_tag(:unit,  options_from_collection_for_select(Unit.all, :id, :name))%>
    <%= select_tag(:ingredient,  options_from_collection_for_select(Ingredient.all, :id, :name))%>
  </div>

  <div class="actions">
    <%= submit_tag("Erstellen") %>
  </div>

<%end %>

